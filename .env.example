# Python Project Creator Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
APP_DEBUG=false
APP_DATA_DIR=./data

# UI Settings
UI_THEME=system
UI_WINDOW_WIDTH=800
UI_WINDOW_HEIGHT=600
UI_REMEMBER_WINDOW_STATE=true

# Template Settings
TEMPLATES_BUILTIN_PATH=./templates
TEMPLATES_CUSTOM_PATH=~/.project-creator/templates
TEMPLATES_AUTO_UPDATE=false

# Ollama AI Integration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_TIMEOUT=30
OLLAMA_PREFERRED_MODEL=
OLLAMA_ENABLE_CACHE=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILES=5

# Development Settings (only set in development)
# DEV_RELOAD_CONFIG=true
# DEV_MOCK_OLLAMA=false