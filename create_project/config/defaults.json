{
    "app": {
        "version": "0.1.0",
        "debug": false,
        "data_dir": "./data"
    },
    "ui": {
        "theme": "system",
        "window_size": [800, 600],
        "remember_window_state": true
    },
    "templates": {
        "builtin_path": "./templates",
        "custom_path": "~/.project-creator/templates",
        "auto_update": false
    },
    "ollama": {
        "api_url": "http://localhost:11434",
        "timeout": 30,
        "preferred_model": "llama3.2:latest",
        "enable_cache": true
    },
    "logging": {
        "level": "INFO",
        "file_enabled": true,
        "console_enabled": true,
        "max_files": 5
    }
}